{
  "include": ["src"],
  "exclude": ["node_modules", ".nyc_output"],
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ESNEXT"],
    "moduleResolution": "Node",
    "declaration": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
