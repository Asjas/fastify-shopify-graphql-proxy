{
  "include": ["src"],
  "exclude": ["node_modules", ".nyc_output"],
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist/main",
    "declarationDir": "dist/types",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "test/*", "node_modules/*"]
    },
    "esModuleInterop": true
  }
}
